@{
    ViewData["Title"] = "Login Page";
}
    @if (ViewBag.Error != null)
    {
        <div class="error-message">@ViewBag.Error</div>
    }

<div class="form-container">
    <form method="post" class="form-box">
        <h1 class="form-title">Create a new account</h1>

        <div class="form-group">
            <label for="email">Name</label>
            <input id="email" name="Username" type="input" required autofocus class="form-input" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" required class="form-input" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn-primary">Create account</button>
        </div>
        <p><a href="/Login" class="form-link">Log in to your account</a></p>
    </form>
</div>